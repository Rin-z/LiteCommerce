
@{

}
<form method="post" action="~/Product/Save">
    <div class="form-group">
        <label>Tên Sản Phẩm:</label>
        <input type="text" class="form-control" id="ProductName" name="ProductName" autofocus>
    </div>

    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>Tên Nhà Cung Cấp:</label>
                <select class="form-control" name="SupplierName" id="SupplierName">
                    <option>Mặc Định</option>
                    <option>New Orleans Cajun Delights</option>
                </select>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="form-group">
                <label>Tên Loại:</label>
                <select class="form-control" name="CategoriesName" id="CategoriesName">
                    <option>Mặc Định</option>
                    <option>Beverages</option>
                </select>
            </div>
        </div>
    </div>

    <div class="form-group">
        <label>Đơn Vị:</label>
        <input type="text" class="form-control" id="Unit" name="Unit">
    </div>

    <div class="form-group">
        <label>Giá:</label>
        <input type="text" class="form-control" id="Price" name="Price">
    </div>

    <div class="form-group">
        <label>Ảnh:</label>
        <input type="file" class="form-control" id="ProductPhoto" name="ProductPhoto">
    </div>

    <div class="row">
        <div class="col-lg-6">
            <button type="submit" class="btn btn-info">
                <i class="fa fa-save"></i>
                Lưu dữ liệu
            </button>
        </div>

        <div class="col-lg-6 text-right">
            <button class="btn btn-adn">
                <a href="~/Product/Index" style="color:#ffffff">
                    <i class="fa fa-save"></i> Hủy
                </a>
            </button>
        </div>

    </div>

</form>



