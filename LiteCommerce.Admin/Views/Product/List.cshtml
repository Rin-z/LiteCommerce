@model IEnumerable<LiteCommerce.DomainModels.Product>
@{
    Layout = null;
}

<div class="text-left">
    <p>Có tất cả <strong>@ViewBag.RowCount</strong> mặt hàng. 
    Bạn đang ở trang <strong>@ViewBag.Page</strong> trên tổng số <strong>@ViewBag.PageCount</strong> trang.</p>
</div>
<div class="box box-primary">
    <table class="table table-bordered table-hover table-striped">
        <thead>
            <tr>
                <th>Tên hàng</th>
                <th>Đơn vị tính</th>
                <th>Giá hàng</th>
                <th>Ảnh minh họa</th>
                <th><a href="~/Product/Add" class="btn btn-xs btn-primary"><i class="fa fa-plus"></i></a></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a href="~/Product/Details/@item.ProductID">@item.ProductName</a>
                    </td>
                    <td>@item.Unit</td>
                    <td>@item.Price</td>
                    <td>
                        <img style="width:200px;height:200px;" src="@item.Photo" />
                    </td>
                    <td>
                        <a href="~/Product/Edit/@item.ProductID" class="btn btn-xs btn-info"><i class="fa fa-edit"></i></a>
                        <a href="~/Product/Delete/@item.ProductID" class="btn btn-xs btn-danger"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center">
        <ul class="pagination">
            <li><a href="javascripts:;" onclick="getProducts(@ViewBag.Page)">«</a></li>
            @for (int page = 1; page <= ViewBag.PageCount; page++)
            {
                if (page == ViewBag.Page)
                {
                    <li class="active"><a href="javascripts:;">@page</a></li>
                }
                else
                {
                    <li><a href="javascripts:;" onclick="getProducts(@page)">@page</a></li>
                }
            }
            <li><a href="javascripts:;" onclick="getProducts(@ViewBag.PageCount)">»</a></li>
        </ul>
    </div>

</div>

