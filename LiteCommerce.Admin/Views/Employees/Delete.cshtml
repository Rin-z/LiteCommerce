@model LiteCommerce.DomainModels.Employee
@{
    ViewBag.Title = "Xác Nhận Xóa";
}



<form class="form-horizontal" method="post" action="~/Employees/Delete/@Model.EmployeeID">
    <div class="col-lg-3"><img src="~/Images/Upload/@Model.Photo" /></div>
    <div class="form-group col-lg-9">
        <label class="col-sm-2 control-label">Họ: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.FirstName</p>
        </div>
        <label class="col-sm-2 control-label">Tên: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.LastName</p>
        </div>

        <label class="col-sm-2 control-label">Ngày Sinh: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.BirthDate</p>
        </div>

        <label class="col-sm-2 control-label">Email: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.LastName</p>
        </div>
        <label class="col-sm-2 control-label">Notes: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Notes</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
            <p class="text-danger" style="font-size: 18px">
                Bạn có chắc chắn muốn xóa nhà cung cấp này?
            </p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">
                Đồng ý
            </button>
            <a href="~/Employees/Index" class="btn btn-info">
                Hủy bỏ
            </a>
        </div>
    </div>

</form>





