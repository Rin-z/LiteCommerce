@model LiteCommerce.DomainModels.Order
@{
    ViewBag.Title = "Add";
}

<h2>Add</h2>

<div class="box box-primary">
    <form role="form" action="~/Order/Save" method="post">
        <div class="box-header text-right">
            <a href="~/Order">Back to List</a>
        </div>

        <div class="box-body">
            <input type="hidden" name="OrderID" value="@Model.OrderID" />
            <input type="hidden" value="@ViewBag.PageCurrent" name="pageCurrent" />
            <div class="form-group row">
                <div class="col-sm-6">
                    <label> OrderTime:@Html.ValidationMessage("RequiredDate", new { @class = "text-danger" })</label>
                    <input type="text" class="form-control" name="OrderTime" value="@Model.OrderTime">
                </div>
                <div class="col-sm-6">
                    <label>ShippedTime:@Html.ValidationMessage("ShippedDate", new { @class = "text-danger" })</label>
                    <input type="text" class="form-control" name="ShippedTime" value="@Model.ShippedTime">
                </div>
            </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Shipper:@Html.ValidationMessage("ShipperID", new { @class = "text-danger" })</label>
                    <input type="text" class="form-control" name="ShipperID" value="@Model.ShipperID" placeholder="Contact Name">
                </div>
            <div class="form-group row">
                <div class="col-sm-6">
                    <label>Employee:@Html.ValidationMessage("EmployeeID", new { @class = "text-danger" })</label>
                    <input type="text" class="form-control" placeholder="Ex: New Orleans" name="EmployeeID" value="@Model.EmployeeID">

                </div>
                @*<div class="col-sm-6">
                    <label>Status</label>
                    <select class="form-control" name="Status">
                        @foreach (var c in SelectListHelper.OrderStatus())
                        {
                            if (Model.Status == c.Value)
                            {
                                <option value="@c.Value" selected="@c.Text">@c.Text</option>
                            }
                            else
                            {
                                <option value="@c.Value">@c.Text</option>
                            }
                         }
                    </select>
                </div>*@
            </div>


        </div>
        <!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-sm btn-primary">
                <i class="fa fa-save"></i> Save
            </button>
            <a class="btn btn-sm btn-default" href="~/Order">
                Cancel
            </a>
        </div>
    </form>
</div>
