@model LiteCommerce.DomainModels.Supplier
@{
    ViewBag.Title = "Xác Nhận Xóa";
}



<form class="form-horizontal" method="post" action="~/Suppliers/Delete/@Model.SupplierID">
    <div class="form-group">
        <label class="col-sm-2 control-label">Tên nhà cung cấp: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.SupplierName</p>
        </div>

        <label class="col-sm-2 control-label">Tên giao dịch: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.ContactName</p>
        </div>
        <label class="col-sm-2 control-label">Địa chi liên hệ: </label>
        <div class="col-sm-10">
            <p class="form-control-static">@Model.Address-@Model.City-@Model.Country</p>
        </div>
        <label class="col-sm-2 control-label">Quốc gia: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.Country</p>
        </div>
        <label class="col-sm-2 control-label">Thành phố: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.City</p>
        </div>
        <label class="col-sm-2 control-label">Mã bưu chính: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.PostalCode</p>
        </div>
        <label class="col-sm-2 control-label">Điện thoại: </label>
        <div class="col-sm-4">
            <p class="form-control-static">@Model.Phone</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-offset-2 col-sm-10">
            <p class="text-danger" style="font-size: 18px">
                Bạn có chắc chắn muốn xóa nhà cung cấp này?
            </p>
        </div>
        <div class="col-lg-offset-2 col-sm-10">
            <button type="submit" class="btn btn-danger">
                Đồng ý
            </button>
            <a href="~/Suppliers/Index" class="btn btn-info">
                Hủy bỏ
            </a>
        </div>
    </div>

</form>





