@model LiteCommerce.Admin.Models.SupplierPaginationQueryResult
@{
    ViewBag.Title = "Nha Cung Cap";
}


@*form để tìm kiêm*@
<div class="box box-default">
    <div class="box-body">
        <form action="~/Suppliers" method="get">
            <div class="input-group input-group-sm">
                <input type="text" name="searchValue" class="form-control" placeholder="Nhập Thông Tin Cần Tìm Kiếm" value="@Model.SearchValue">
                <span class="input-group-btn">
                    <button type="submit" class="btn btn-primary btn-flat">
                        <i class="fa fa-search"></i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>




    <div class="text-left">
        <p>There are <b>@Model.RowCount</b> Suppliers .<b>Page @string.Format("{0}/{1}", @Model.Page, @Model.PageCount)</b></p>
    </div>
    <div class="box box-primary">
        <div class="box-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Tên Nhà Cung Cấp</th>
                        <th>Tên Giao Dịch</th>
                        <th>Địa Chỉ</th>
                        <th>Điện Thoại</th>
                        <th>Mã Vùng</th>

                        <th class="text-right">
                            <button class="btn btn-primary">
                                <a href="~/Suppliers/Add" style="color:#fff"><i class="fa fa-plus"></i></a>
                            </button>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Data)
                    {
                        <tr>
                            <td>@item.SupplierName</td>
                            <td>@item.ContactName</td>
                            <td>
                                <p>@item.Address</p>
                                <p>@item.City - @item.Country </p>
                            </td>
                            <td ><i class="fa fa-phone">@item.Phone</i></td>
                            <td>@item.PostalCode</td>
                            <td class="text-right">
                                <a href="~/Suppliers/Edit/@item.SupplierID" class="btn btn-info"><i class="fa fa-edit"></i></a>
                                <a href="~/Suppliers/Delete/@item.SupplierID" class="btn btn-danger"><i class="fa ion-android-delete"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>


        <div class="text-center">
            <ul class="pagination">
                <li><a href="~/Suppliers?page=1&searchValue=@Model.SearchValue">«</a></li>
                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    if (i == Model.Page)
                    {
                        <li class="active"><a href="#">@i</a></li>
                    }
                    else
                    {
                        <li><a href="~/Suppliers?page=@i&searchValue=@Model.SearchValue">@i</a></li>
                    }
                }
                <li><a href="~/Suppliers?page=@Model.PageCount&searchValue=@Model.SearchValue">»</a></li>
            </ul>
        </div>
    </div>

